package com.capgemini.carwash.service;

import java.util.List;
import java.util.Set;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.capgemini.carwash.entity.User;
import com.capgemini.carwash.entity.UserRole;
import com.capgemini.carwash.repository.UserRepository;

@Service
public class UserService {
	
	@Autowired
	private UserRepository repository;
	
	public Set<User> getUserListByRoles( role){
		
		Set<User> custList = repository.findByRoles(role);
		return custList;
	}

}
