package com.capgemini.carwash.service;

import java.util.List;
import java.util.Map;
import java.util.Set;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.capgemini.carwash.entity.User;
import com.capgemini.carwash.entity.UserRole;
import com.capgemini.carwash.repository.UserRepository;

@Service
public class UserService {

	@Autowired
	private UserRepository repository;

	public List<User> getUserListByRoles(UserRole role) {

		List<User> custList = repository.findByRoles(role);

		Map<Set, List<User>> userListByCustomer = custList.stream()
				.collect(Collectors.groupingBy(User::getRoles));

		return custList;
	}

}
